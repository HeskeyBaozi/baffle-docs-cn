{
  "name": "baffle-docs",
  "version": "1.0.0",
  "description": "The documentation site for baffle.js",
  "dependencies": {
    "highlight.js": "^9.5.0"
  },
  "devDependencies": {
    "babel-core": "^6.11.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "http-server": "^0.9.0",
    "node-sass": "^3.8.0",
    "webpack": "^1.13.1"
  },
  "scripts": {
    "start": "npm run -s css:watch & npm run -s js:watch & npm run -s server",
    "server": "http-server . -p 4567 -c-1 -s",
    "js:watch": "webpack -wp",
    "js:build": "webpack -p",
    "css:watch": "node-sass -w --output-style compressed assets/css/main.scss assets/css/main.min.css",
    "css:build": "node-sass --output-style compressed assets/css/main.scss assets/css/main.min.css"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "author": "Cam Wiegert <cam@camwiegert.com>",
  "license": "MIT",
  "homepage": "https://camwiegert.github.io/baffle"
}
